@model MVCLearnings.Models.Employee
@{
    ViewBag.Title = "Employee Details";
}
<h2>@ViewBag.Title</h2>
<table>
    <tr>
        <td>Employee ID</td>
        <td>@Model.EmployeeId</td>
    </tr>
    <tr>
        <td>Name</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Gender</td>
        <td>@Model.Gender</td>
    </tr>
    <tr>
        <td>City</td>
        <td>@Model.City</td>
    </tr>
</table>
@Html.ActionLink("Go back to Employees List", "Index", "Employees", new { id = @Model.DepartmentId }, null)
